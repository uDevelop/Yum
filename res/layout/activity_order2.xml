<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/order_width"
    android:layout_height="@dimen/order_height"
    android:background="@color/white">
    
    <TextView
        android:id="@+id/order2_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/order_title_margin_tb"
        android:layout_marginBottom="@dimen/order_title_margin_tb"
        android:layout_marginLeft="@dimen/order_title_marginLeft"
        android:textSize="@dimen/order_title_textSize"
        android:textStyle="bold"
        android:text="@string/my_order"/>
    
     <TextView 
        android:id="@+id/order2_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/order2_ruble"
        android:layout_marginTop="@dimen/order_price_marginTop"
        android:textColor="@color/item_price"
        android:textSize="@dimen/order_price_textSize"
        android:textStyle="bold"
        android:text="260 "/>
     
     <ImageView
        android:id="@+id/order2_ruble" 
	    android:layout_width="@dimen/order_ruble_width"
	    android:layout_height="wrap_content"
	    android:src="@drawable/icon_ruble"
	    android:layout_alignParentTop="true"
	    android:layout_marginTop="@dimen/order_price_marginTop"
	    android:paddingTop="@dimen/order_ruble_paddingTop"
	    android:layout_marginRight="@dimen/order_ruble_marginRight"
	    android:layout_alignParentRight="true"
	    android:adjustViewBounds="true"/>
     
     <ru.inventos.yum.Divider 
         android:id="@+id/order2_divider"
         android:layout_width="match_parent"
         android:layout_height="@dimen/order_divider_height"
         custom:fill_color="@color/gray"
         android:layout_alignTop="@+id/order2_list"/>
     
     <ListView
         android:id="@+id/order2_list"
         android:layout_width="match_parent"
         android:layout_height="@dimen/order_list_height" 
         android:divider="@color/gray"
         android:dividerHeight="@dimen/order_divider_height"
         android:scrollbars="none"
         android:listSelector="@color/transparent"
         android:layout_below="@id/order2_title"/>
     
      <ru.inventos.yum.Divider 
         android:id="@+id/order2_divider2"
         android:layout_width="match_parent"
         android:layout_height="@dimen/order_divider_height"
         custom:fill_color="@color/gray"
         android:layout_alignBottom="@id/order2_list"/>
            
     <RelativeLayout 
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_below="@id/order2_divider2"
         android:layout_alignRight="@id/order2_ruble"
         android:layout_alignLeft="@id/order2_title">
         
         
         <ImageButton 
    		android:id="@+id/order2_edit_btn"
        	android:layout_width="@dimen/order2_edit_btn_width"
        	android:layout_height="wrap_content"   
        	android:layout_alignParentLeft="true"     
        	android:layout_centerVertical="true"
        	android:scaleType="fitCenter"        
       		android:adjustViewBounds="true"
        	android:src="@drawable/order2_edit_btn"
        	android:background="#00000000" 
        	android:onClick="onEditBtnClick"/>

     	<ImageButton
     	    android:id="@+id/order2_checkout_btn"
     	    android:layout_width="@dimen/order2_checkout_btn_width"
     	    android:layout_height="wrap_content"
     	    android:layout_alignBottom="@+id/order2_edit_btn"
     	    android:layout_alignParentRight="true"
     	    android:adjustViewBounds="true"
     	    android:background="#00000000"
     	    android:onClick="onCheckoutBtnClick"
     	    android:scaleType="fitCenter"
     	    android:src="@drawable/order2_checkout_btn" />
         
     </RelativeLayout>     

</RelativeLayout>