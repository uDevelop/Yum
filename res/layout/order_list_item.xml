<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/order_item_margin_lr"
    android:layout_marginRight="@dimen/order_item_margin_lr" >
    
    <TextView
        android:id="@+id/order_item_name"
        android:layout_height="@dimen/order_item_height"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:lines="3"
        android:gravity="center_vertical"
        android:text="1. Щи зеленые (350г.)"
        android:textSize="@dimen/main_list_textSize" />
    
    <TextView
        android:id="@+id/order_item_price"
        android:layout_height="@dimen/order_item_height"
        android:layout_width="@dimen/order_item_price_width"
        android:layout_alignParentRight="true"
        android:lines="1"
        android:gravity="center_vertical"
        android:text="10 x 6500.00 \u0584"
        android:textSize="@dimen/main_list_textSize" />
    

</RelativeLayout>